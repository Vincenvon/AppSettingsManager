    <PackageReference Include="Microsoft.Extensions.FileProviders.Physical" Version="3.1.4" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="AppSettingsManagerContent\js\" />
    <Folder Include="src\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="AppSettingsManagerContent\index.html">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="AppSettingsManagerContent\js\application.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="AppSettingsManagerContent\js\application.js.map">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
